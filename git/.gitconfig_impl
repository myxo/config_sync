# include this file in your .gitconig as
# [include]
#	path=.gitconfig_impl


[push]
    default = simple
[alias]
    co = checkout
    ci = commit
    st = status
    new = checkout -b
    hist = log --pretty=format:\"%h %ad | %s%Cblue%d%Cgreen [%an]%Creset\" --graph --date=short
    upmaster = fetch origin master:master
[core]
    editor = vim
    pager = less -FRX
[pull]
    ff = only
