# include this file in your .gitconig as
# [include]
#	path=.gitconfig_impl


[push]
    default = simple
[alias]
    co = checkout
    ci = commit
    st = status
    hist = log --pretty=format:\"%h %ad | %s%Cblue%d%Cgreen [%an]%Creset\" --graph --date=short -20
[core]
    editor = vim
[pager]
    log = false
